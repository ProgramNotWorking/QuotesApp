<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quoteItemMainHolder"
    android:theme="@style/AppTheme.Light"
    android:forceDarkAllowed="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    tools:ignore="UnusedAttribute">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">


        <TextView
            android:id="@+id/upperApostropheRcViewItemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:text="@string/upper_apostrophe" />

        <TextView
            android:id="@+id/quoteTextViewRcViewItemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stub"
            android:textSize="24sp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lowerApostropheRcViewItemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="end"
            android:paddingStart="0dp"
            android:paddingEnd="20dp"
            android:text="@string/lower_apostrophe" />

        <TextView
            android:id="@+id/quoteAuthorRcViewItemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingStart="0dp"
            android:paddingEnd="50dp"
            android:gravity="end"
            android:text="@string/stub" />

    </LinearLayout>

</androidx.cardview.widget.CardView>